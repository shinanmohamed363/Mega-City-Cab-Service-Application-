<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>Mega City Cab Service</display-name>

  <!-- Define the Servlet -->
  <servlet>
    <servlet-name>SampleServlet</servlet-name>
    <servlet-class>MegaCityCabServiceApplication.SampleServlet</servlet-class>
    <load-on-startup>1</load-on-startup> <!-- Optional: Load the servlet on startup -->
  </servlet>

  <!-- Map the Servlet to a URL pattern -->
  <servlet-mapping>
    <servlet-name>SampleServlet</servlet-name>
    <url-pattern>/sample</url-pattern>
  </servlet-mapping>

</web-app>
